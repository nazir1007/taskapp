<div>
  <div class="container my-2">
    <div class="d-flex justify-content-between mt-2 mb-2">
       <h1>Create Your Task</h1>
       <button type="submit" class="btn btn-outline-info">
         <a href="/">Logout</a>
       </button>
     </div>
     
     <form id="myForm" action="/create" method="POST">
       <div class="mb-2">
         <label class="form-label" style="font-size:35px;">Task</label>
         <input type="text" class="form-control" name="task" required />
       </div>
       <button type="submit" class="btn btn-primary">Submit</button>
     </form>
 </div>
 <div class="container">
    <div class="d-flex justify-content-between mt-2 mb-2">
    </div>
    <div class="row">
      <% if(rows.length) { %>
         <% rows.map((eachData) => { %>
             <div class="card mb-1" >
               <div class="card-body">
                 <%= eachData.task %>
                <div class="d-grid d-md-flex justify-content-md-end">
                  <button class="btn btn-warning">
                    <a class="me-md-2" href="/update?id=<%= eachData.id %>">Edit</a>
                  </button>
                <button class="btn btn-danger ms-2">
                  <a href="/delete?id=<%= eachData.id %>">Delete</a>
                </button>              
                </div>        
            </div>
            </div>
         <% }) %> 
       <%} else { %>
         <div class="col-md-12">
            <h1 class="h2 text-center">No Record found</h1>
        </div>
      <% }%>
    </div>
  </div>
</div>